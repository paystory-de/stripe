{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "typeRoots": ["node_modules/@types"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    //    "noUnusedLocals": true,
    //    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "target": "es2017",
    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": ["src/**.ts"],
  "exclude": ["node_modules"]
}
